    "/v1/oauth2/token": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Login and obtain access token",
        "description": "Authenticate with credentials and receive an access token for API requests.",
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "grant_type": { "type": "string", "example": "password" },
                  "userId": { "type": "string", "example": "admin" },
                  "password": { "type": "string", "format": "password" }
                },
                "required": ["grant_type", "userId", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful authentication",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            }
          },
          "401": { "description": "Invalid credentials" }
        }
      }
    },
    "/v1/oauth2/revoke": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Logout and revoke token",
        "description": "Revoke the current access token and invalidate the session.",
        "security": [{ "bearerAuth": [] }],
